	<script>
		function pay(evt, menu) {

			var i, tabcontent, tablinks;
			tabcontent = document.getElementsByClassName("tabcontent");
			for (i = 0; i < tabcontent.length; i++) {
				tabcontent[i].style.display = "none";
			}
			document.getElementById(menu).style.display = "block";
		}


		var tablinks = document.getElementsByClassName('tablinks');

		for (var i = 0; i < tablinks.length; i++) {
			tablinks[0].style.color = "white";
			tablinks[0].style.background = "#00b050";
			tablinks[0].style.border = "1px solid white";

			tablinks[i].addEventListener('click', function () {
				for (var j = 0; j < tablinks.length; j++) {
					tablinks[j].style.color = "black";
					tablinks[j].style.background = "white";
					tablinks[j].style.border = "none";
				}
				this.style.color = "white";
				this.style.background = "#00b050";
				this.style.border = "1px solid white";
			})
		}

		var swiper = new Swiper(".mySwiper", {
			pagination: { // 페이저 버튼 사용자 설정
				el: '.pagination', // 페이저 버튼을 담을 태그 설정
				clickable: false, // 버튼 클릭 여부
				type: 'fraction', // 버튼 모양 결정 "bullets", "fraction" 
				renderBullet: function (index, className) { // className이 기본값이 들어가게 필수 설정
					return '<a href="#" class="' + className + '">' + (index + 1) + '</a>'
				},
				renderFraction: function (currentClass, totalClass) { // type이 fraction일 때 사용
					return '<span class="' + currentClass + '"></span>' +
						'<span class="' + totalClass + '"></span>';
				}
			},
		});

		
	</script>
