@charset "utf-8";

#head {position:fixed; top: 0; left: 0; width:100%; height:35px; z-index:99;  text-align:center; font-size:18px; font-weight:500;}
#head img {height:30px; object-fit: cover; vertical-align: middle;}
#head a{position:absolute;left:0px; top:3px; color:#999999; }
#head span{position:absolute; right:10px; top:8px;}
#head span a{position:static;}
#head span img {height:22px; object-fit: cover; opacity: 0.6;}
.sub_head {position: fixed; left: 0; z-index: 99; width: 100%; background: #0f4c95; text-align: center; color: #fff;  font-weight:500; top: 8vh; height: 5vh; line-height: 5vh; font-size: 5vw; letter-spacing: 1vw;}

#header {position:relative;width:100%; height: 8vh; z-index:2;    text-align:center; color:#fff; font-size:18px; font-weight:500;padding: 5px 0;
    box-sizing: border-box;}
#header img {height: 100%;}
#header a{display:block; height: 100%;}

#lnb {border-bottom:1px solid #c2c2c2; background:#1f407c; font-weight:500; font-size:1em;}
#lnb li {float:left; text-align:center;}
#lnb li a {display:inline-block; padding:0 10px 3px 10px; color:#fff;}
#lnb .on a{border-bottom:2px solid #fff554; color:#fff554;}
#lnb .w_50 {width:50%;}
#lnb .w_25 {width:25%;}


#container,#roles, #history, #orgchart{padding: 13vh 15px 10vh;}
#ceo_history{padding: 152px 15px 15px;}
#container_intro {overflow: hidden; padding-bottom:10vh;}

#container img {max-width:100%;}
/* #container h3 {margin-bottom:10px; padding-left:17px; background:url(../images/h3.gif) left 5px no-repeat; font-size:1em;} */

.content .btn {margin-top:10px; padding:10px; text-align:center;}
.content table {width:100%;}
.content th, content td {padding:7px; border:1px solid #c6c6c6;}
.content th{width:117px; background:#eee;}
.content td input[type~="text"],
.content td input[type~="text"]{width:99.5%; height: 32px;}
.content td textarea{width:98%;}
.content td dt{margin:5px 0 10px 0; color:#999; padding-left:20px; background:url(../images/icon_name.gif) left top no-repeat;}
.content td dt strong {font-size:14px; color:#000;}
.content table .title {text-overflow:ellipsis; white-space:nowrap; overflow:hidden;}
.content td ul li{float: left;margin-right: 10px;}
.content td div{margin-top: 10px;}
.content td div p{margin-top: 5px;}

#footer {position:fixed; bottom:0; width:100%; background:#fff; z-index:1; font-size:0.7em; line-height:100%; white-space:nowrap; 
	overflow:hidden; box-shadow: 0px -2px 6px 0px rgba(0,0,0,0.1); border-radius: 10px 10px 0 0; padding: 0 1px;}
#footer img {vertical-align: middle;}
#footer li {float:left; width:14%; text-align:center; padding: 2px 0;letter-spacing: -1px; flex-grow: 1;overflow: revert;}
#footer li img {height:20px; margin-bottom:5px;}
#footer li a{display:inline-block; width:100%; color: #717171;}
#footer i {margin-bottom: 5px;}
#footer .on {position: relative;}
/* #footer .on::after {background: linear-gradient(to right, #2e3192, #0071bb); content: ''; width: 100%; height: 3px; position: absolute; top: 0; left: 0; z-index: 2;} */
#footer .on a, #footer .on a i {color:#e82e8a;}

#footer .footer_icon_box {height: 5vh;}
#footer .footer_icon_box01{background: url(/images/main_menu01.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box02{background: url(/images/main_menu02.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box03{background: url(/images/main_menu03.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box04{background: url(/images/main_menu04.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box05{background: url(/images/main_menu05.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box06{background: url(/images/main_menu06.svg) no-repeat center; background-size: auto 70%;}
#footer .footer_icon_box07{background: url(/images/main_menu07.svg) no-repeat center; background-size: auto 70%;}

#footer .on .footer_icon_box01{background: url(/images/main_menu01_on.svg) no-repeat center; background-size: auto 70%;}
#footer .on .footer_icon_box02{background: url(/images/main_menu02_on.svg) no-repeat center; background-size: auto 70%;}
#footer .on .footer_icon_box03{background: url(/images/main_menu03_on.svg) no-repeat center; background-size: auto 70%;}
#footer .on .footer_icon_box04{background: url(/images/main_menu04_on.svg) no-repeat center; background-size: auto 70%;}
#footer .on .footer_icon_box05{background: url(/images/main_menu05_on.svg) no-repeat center; background-size: auto 70%;}
