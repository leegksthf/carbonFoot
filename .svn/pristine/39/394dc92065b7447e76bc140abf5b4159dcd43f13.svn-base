<script type="text/javascript">
$(document).ready(function() {
	$("#brd_modify").click(function(){
		window.resizeBy("0", "130");
		
		location.href="hongbo_board_write?mode=modify&number="+$(this).attr("board_no");
	});
});
</script>

<h2><span class="float_l">홍보</span><img onclick="window.close();" src="../../../images/admin/btn_close.gif" alt="" class="float_r hand" /></h2>
 	<div class="content"> 
		<table class="mb_10">
			<tr>
				<th>제목</th>
				<td><%=db_data[0].board_title%></td>
			</tr>
			<tr>
				<th>조회수</th>
				<td><%=db_data[0].board_cnt%></td>
			</tr>
			<tr>
				<th>우선순위</th>
				<td><%=db_data[0].sort%></td>
			</tr>
			<tr>
				<th>대표이지미</th>
				<td>
				<%
				if(db_data_main_file.length){
					for(var i = 0; i < db_data_main_file.length; i++){
				%>
					<li><a href="/download/<%=db_data_main_file[i].file_dtname%>/<%=db_data_main_file[i].file_name%>/hongbo_board"><%=db_data_main_file[i].file_name%></a></li>
				<%
					}
				}
				%>
				</td>
			</tr>			
			<tr>
				<th>회원</th>
				<td><%=db_data[0].orgmem_name %></td>
			</tr>
			<tr>
				<th>작성자</th>
				<td>
					<% if(db_data[0].create_name == null) db_data[0].create_name = "--"; %>
					<%=db_data[0].create_name%>
				</td>
			</tr>
			<tr>
				<th>작성일</th>
				<td><%=db_data[0].c_date%></td>
			</tr>
			<tr>
				<td colspan="2" style="white-space:pre-line;">
				
					<%=db_data[0].board_content%>
					
					<%
						if(db_data_file.length){
							for(var i = 0; i < db_data_file.length; i++){
					%>
							<div><img src="/file/hongbo_board/<%=db_data_file[i].file_dtname%>" alt="" width="100%" /></div>
					<%
							}
						}
					%>
				
				</td>
			</tr>
			<tr>
				<th>첨부파일</th>
				<td>
				<%
				if(db_data_file.length){
					for(var i = 0; i < db_data_file.length; i++){
				%>
					<li><a href="/download/<%=db_data_file[i].file_dtname%>/<%=db_data_file[i].file_name%>/hongbo_board"><%=db_data_file[i].file_name%></a></li>
				<%
					}
				}
				%>
				</td>
			</tr>			
		</table>

		<p class="btn">
			<button class="btn_big_blue hand" id="brd_modify" board_no="<%=db_data[0].board_no %>">수정</button>
			<button class="btn_big_black hand" onclick="window.close();">취소</button>
		</p>
	</div>