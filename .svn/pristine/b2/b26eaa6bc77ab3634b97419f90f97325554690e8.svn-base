<script type="text/javascript">
$(document).ready(function() {
	$("#banner_modify").click(function(){
		//window.resizeBy("0", "130");
		
		location.href="banner_write?mode=modify&number="+$(this).attr("idx");
	});
});
</script>

<h2><span class="float_l">배너</span><img onclick="window.close();" src="../../../images/admin/btn_close.gif" alt="" class="float_r hand" /></h2>
 	<div class="content"> 
		<table class="mb_10">
			<tr>
				<th>제목</th>
				<td><%=db_data[0].title%></td>
			</tr>
			<tr style="display:none;">
				<th>적용기간</th>
				<td><%=db_data[0].strt_dt%> ~ <%=db_data[0].end_dt%></td>
			</tr>
			<tr>
				<th>배너 이미지</th>
				<td>
				<%
				if(db_data.length > 0 && db_data[0].file_dtname != null){
				%>
					<li><a href="/download/<%=db_data[0].file_dtname%>/<%=db_data[0].file_name%>/banner"><%=db_data[0].file_name%></a></li>
				<%
				}
				%>
				</td>
			</tr>			
			<tr>
				<th>작성자</th>
				<td><%=db_data[0].create_name%></td>
			</tr>
			<tr>
				<th>작성일</th>
				<td><%=db_data[0].c_date%></td>
			</tr>
		</table>

		<p class="btn">
			<button class="btn_big_blue hand" id="banner_modify" idx="<%=db_data[0].idx %>">수정</button>
			<button class="btn_big_black hand" onclick="window.close();">취소</button>
		</p>
	</div>