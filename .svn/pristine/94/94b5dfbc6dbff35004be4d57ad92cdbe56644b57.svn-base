<script>
	$(document).ready(function(){
		
		var header_h = $("#sub_header").outerHeight(true),
			news_h = $(".quick_news").outerHeight(true),
			quick_h = $(".sub_main_quick").outerHeight(true) + 10,
			notice_h = $(".notice_zone_wrap").outerHeight(),
			gallery_h = $(".gallery_zone_wrap").outerHeight(),
			//zBox_h = notice_h + gallery_h,
			all_h = $(window).outerHeight(),
			sub_h = header_h + news_h + quick_h + notice_h + gallery_h
			
		$(".sub_slide_ad").css("height", all_h - sub_h - 50);
		
	});//js end
</script>

