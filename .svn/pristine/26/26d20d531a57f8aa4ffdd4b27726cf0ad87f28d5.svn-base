<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=10, user-scalable=yes" />
<link rel="stylesheet" type="text/css" href="/js/jquery/css/swiper.min.css"/>
<script type="text/javascript" src="/js/jquery/swiper.min.js"></script>
<script>
    $(document).ready(function() {
     var swiper = new Swiper('.swiper-container', {
		        spaceBetween: 0,
		        centeredSlides: true,
		        autoplay: {
		        	delay: 3000,
		          	disableOnInteraction: false,
				},
				navigation: {
					nextEl: '.swiper-button-next',
					prevEl: '.swiper-button-prev',
				},
				loop : true,
		        speed : 1000
		});
      var all_club = $('.all_club');
        $(all_club).click(function(){
                //   $(this).addClass('on');
                //   all_club.not($(this)).removeClass('on');
            var  club_value = $(this).attr('value');
            window.location.href = "member_officer_list?century=<%=century%>&num_type="+club_value;
      });

      $('#searchAction').click(function() {
        var text = $("#search_text").val();
        if(text == ''){
            return false;
        }
        window.location.href = "member_officer_list?century=<%=century%>&search_text="+text;
		});

    });
	$(document).ready(function(){
		var header_h = $(".header").outerHeight(true),
			sub_h = $(".sub_head").outerHeight(true),
			cont_t = $(".club_cont").outerHeight(true),
			padding_h = header_h + sub_h;
				
			//$(".club_cont").css("top", padding_h)
			$(".club_div").css("padding-top", padding_h)
		
	})



</script>


<style>
    .swiper-container { width: 100%;   border-radius: 10px; background-size: cover;}
	.swiper-wrapper{ overflow: visible;height: 150px; }
	.swiper-slide { text-align: center;font-size: 18px; background: #fff; 
	    display: -webkit-box;
		display: -ms-flexbox;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: center;
		-ms-flex-pack: center;
		-webkit-justify-content: center;
		justify-content: center;
		-webkit-box-align: center;   
		-ms-flex-align: center;
	 }
	 .content_img img{width: 100%;height: 92%;border-radius: 10px;}

.swiper-slide a, .swiper-slide img{ width:100%; vertical-align: top;height: 110px;}
.swiper-txt{font-size: 15px; margin-bottom: 7px;font-weight: 500;}
    
    
</style>

