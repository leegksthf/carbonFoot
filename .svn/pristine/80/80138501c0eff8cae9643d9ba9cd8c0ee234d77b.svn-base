	<script>
		$('.js-click-modal').click(function () {
			$('.modal-container').addClass('modal-open');
		});

		$('.js-close-modal').click(function () {
			$('.modal-container').removeClass('modal-open');
		});

		$('.js-click-modal').click(function () {
			$('.header').fadeOut(800);
		});

		$('.js-close-modal').click(function () {
			$('.header').fadeIn(600);
		});

		var acc = document.getElementsByClassName("accordion");
		var i;

		for (i = 0; i < acc.length; i++) {
			acc[i].addEventListener("click", function () {
				var panel = this.parentNode.nextElementSibling;
				if (panel.style.display === "none") {
					panel.style.display = "block";
				} else {
					panel.style.display = "block";
				}
			});
		}

		var noacc = document.getElementsByClassName("no-acc");
		var i;

		for (i = 0; i < noacc.length; i++) {
			noacc[i].addEventListener("click", function () {
				var panel = this.parentNode.nextElementSibling;
				panel.style.display = "none";
			});
		}


		var tablinks = document.getElementsByClassName('major-class-btn');
		for (var i = 0; i < tablinks.length; i++) {
			tablinks[i].addEventListener('click', function () {
				for (var j = 0; j < tablinks.length; j++) {
					tablinks[j].style.background = "var(--gray-color)";
				}
				this.style.background = "#7edaf6";
			})
		};

		var minorBtn = document.getElementsByClassName('minor-class-btn');
		for (var i = 0; i < minorBtn.length; i++) {
			minorBtn[i].addEventListener('click', function () {
				for (var j = 0; j < minorBtn.length; j++) {
					minorBtn[j].style.background = "white";
					minorBtn[j].style.color = "black";
				}
				this.style.background = "#7edaf6";
				this.style.color = "white";
			})
		};
	</script>
