<script>
	$(document).ready(function(){
		var header_h = $(".header").outerHeight(true),
			sub_h = $(".sub_head").outerHeight(true),
			padding_h = header_h + sub_h ;
			$(".community_con").css("padding-top", padding_h )
			
			
		
		
	var swiper02 = new Swiper('.slide_gallery', {
		         autoplay: {
		         	delay: 3000,
		          	disableOnInteraction: false,
		         },
				navigation: {
		          nextEl: ".swiper-button-next",
		          prevEl: ".swiper-button-prev",
		        },
				speed : 1000,
				slidesPerView: 'auto',
				centeredSlides: true,
				slidesPerView: 'auto',
				loop:true,
				loopAdditionalSlides: 1,
				loopFillGroupWithBlank: true,
				spaceBetween: 15,
			 });
	
		var swiper03 = new Swiper('.slide_ad', {
				autoplay: {
					delay: 3000,
					disableOnInteraction: false,
				},
				speed : 1000,
				slidesPerView: 'auto',
				centeredSlides: true,
				slidesPerView: 'auto',
				loop:true,
				loopAdditionalSlides: 1,
				loopFillGroupWithBlank: true,
				spaceBetween: 15,
			 });
	})
</script>

<div class="community_con">
	<div class="zone_wrap notice_zone_wrap">
		<a href="/board_list" class="zone_tit">
			<p>공지사항</p>
			<i class="fas fa-chevron-right"></i>
		</a>
		<ul class="zone_con">
		<% for(var i = 0; i < board_results.length; i++) {%>
			<li brd_no="<%=board_results[i].board_no %>">
				<a href="/board_view?brd_no=<%=board_results[i].board_no %>&category=notice&century=<%=century%>">
					<span class="n_zone_l"><%=board_results[i].c_date %></span>
					<span class="n_zone_r"><%=board_results[i].board_title %></span>
				</a>
			</li>
		<% }%>	
		</ul>
		
	</div>
	<div class="zone_wrap gallery_zone_wrap">
		<a href="/gallery_board_list" class="zone_tit">
			<p>갤 러 리</p>
			<i class="fas fa-chevron-right"></i>
		</a>
		<div class="slide_gallery swiper-container">
				<div class="swiper-wrapper">
					<% for(var i = 0; i < gallery_results.length; i++) {%>
					<a class="swiper-slide" href="/gallery_board_view?century=<%=century%>&brd_no=<%=gallery_results[i].board_no%>">
						<div class="gallery_img">
							<img src="/file/gallery_board/<%=gallery_results[i].img_file_name%>" alt="" />
						</div>
						<div class="gallery_tit">
							<p><%=gallery_results[i].board_title %></p>
							<p class="gallery_date"><%=gallery_results[i].c_date %></p>
							<p><%=gallery_results[i].board_content %></p>
						</div>
					</a>
					<% }%>	
				</div>
				<div class="swiper-button-next"></div>
      			<div class="swiper-button-prev"></div>
			</div>
		
	</div>
	<div class="zone_wrap vote_zone_wrap ">
		<a href="/event_board_list" class="zone_tit">
			<p>행사참석</p>
			<i class="fas fa-chevron-right"></i>
		</a>
		<a href="/event_board_view?brd_no=<%=event_results[0].board_no %>&century=<%=century%>">
			<ul class="zone_con">
				<li>
					<div>
						<span class="vote_tit_l"><%=event_results[0].c_date %></span>
						<span class="vote_tit_r"><%=event_results[0].board_title %></span>
					</div>
				</li>
				<li>
					<ol>
						<li>
							<div class="vote_value vote_value01">
								<div>
									<p><%=event_results[0].y_cnt+event_results[0].n_cnt+event_results[0].i_cnt %></p>
									<p>전체</p>
								</div>
							</div>
						</li>
						<li>
							<div class="vote_value">
								<div>
									<p><%=event_results[0].y_cnt %></p>
									<p>참석</p>
								</div>
							</div>
						</li>
						<li>
							<div class="vote_value">
								<div>
									<p><%=event_results[0].n_cnt %></p>
									<p>불참석</p>
								</div>
							</div>
						</li>
						<li>
							<div class="vote_value">
								<div>
									<p><%=event_results[0].i_cnt %></p>
									<p>미정</p>
								</div>
							</div>
						</li>
					</ol>
				</li>
			</ul>
		</a>
	
	</div>
	
	<div class="slide_ad sub_slide_ad swiper-container board_slide">
		<div class="swiper-wrapper">
			<% for(var i = 0; i < hongbo_results.length; i++) {%>
			<a class="swiper-slide" style="height: 120px;" href="/hongbo_board_view?century=<%=century%>&brd_no=<%=hongbo_results[i].board_no%>">
				<img src="/file/hongbo_board/<%=hongbo_results[i].img_file_name%>" alt="" />
			</a>
			<% }%>	
		</div>
	</div>
	
	
</div>